<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:gravity="center"
    tools:context=".Register">
    <ImageView
        android:src="@drawable/applogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/user_name_reg_id"
            android:inputType="text"
            android:textSize="20dp"
            android:textStyle="bold"
            android:hint="Enter User Name"
            android:textColor="#E91E63"
            android:textColorHint="#E91E63"
            android:padding="20dp"
            android:background="@drawable/input_edittext_design"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/phone_reg_Id"
            android:textSize="20dp"
            android:textStyle="bold"
            android:hint="Enter Phone Number"
            android:textColor="#E91E63"
            android:padding="20sp"
            android:textColorHint="#E91E63"
            android:background="@drawable/input_edittext_design"
            android:inputType="phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/pass_reg_Id"
            android:textSize="20dp"
            android:textStyle="bold"
            android:hint="Enter Password"
            android:textColor="#E91E63"
            android:padding="20sp"
            android:textColorHint="#E91E63"
            android:background="@drawable/input_edittext_design"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <Button
        android:id="@+id/registration_id"
        android:textSize="20sp"
        android:text="Create Account"
        android:layout_marginTop="15sp"
        android:background="@drawable/joinnow"
        android:textAllCaps="false"
        android:textColor="#FAF9F9"
        android:onClick="RegistrationCreateAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>