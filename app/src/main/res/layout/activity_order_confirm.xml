<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".OrderConfirmActivity">
    <TextView
        android:text="Please Write Your Details"
        android:textSize="30dp"
        android:textAlignment="center"
        android:textStyle="bold|italic"
        android:textColor="@android:color/holo_orange_dark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/order_totalAmount_id"
        android:text="Total Amount:"
        android:textSize="20sp"
        android:layout_marginTop="15dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@android:color/holo_orange_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight=".5"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
            android:id="@+id/order_name_id"
            android:hint="Your Name"
            android:textSize="22sp"
            android:textStyle="bold"
            android:inputType="text"
            android:textColor="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/order_number_id"
            android:hint="Your Phone Number"
            android:textSize="22sp"
            android:textStyle="bold"
            android:inputType="number"
            android:layout_marginTop="5dp"
            android:textColor="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/order_address_id"
            android:hint="Your Address"
            android:textSize="22sp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:inputType="text"
            android:textColor="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/order_city_id"
            android:hint="Your City"
            android:textSize="22sp"
            android:inputType="text"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:textColor="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:gravity="bottom"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/order_btn_id"
            android:text="Confirm"
            android:textSize="22dp"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>



</LinearLayout>