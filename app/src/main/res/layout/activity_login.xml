<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:padding="20sp"
    android:orientation="vertical"
    tools:context=".Login">
    <ImageView
        android:src="@drawable/applogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/phone_login_Id"
            android:inputType="phone"
            android:textSize="20dp"
            android:textStyle="bold"
            android:hint="Enter Yuor Phone Number"
            android:textColor="#0F0F0F"
            android:padding="20dp"
            android:background="@drawable/input_edittext_design"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/password_login_Id"
            android:textSize="20dp"
            android:textStyle="bold"
            android:hint="Enter Yuor Password"
            android:textColor="#0F0F0F"
            android:padding="20sp"
            android:background="@drawable/input_edittext_design"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.rey.material.widget.CheckBox
            android:id="@+id/checkbox_materialId"
            android:text="Remember Me"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="#E91E63"
            android:textAllCaps="false"
            style="@style/Material.Drawable.CheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/forgot_passtId"
            android:textSize="16dp"
            android:textStyle="bold"
            android:gravity="right"
            android:textColor="#E91E63"
            android:text="Forget Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <Button
        android:id="@+id/login_main_id"
        android:textSize="20sp"
        android:text="Login"
        android:layout_marginTop="15sp"
        android:background="@drawable/joinnow"
        android:textAllCaps="false"
        android:textColor="#FAF9F9"
        android:onClick="LoginClickToHomepage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/not_admin_panel_LinkId"
            android:text="I'm not an admin?"
            android:textSize="20sp"
            android:textColor="#E91E63"
            android:textStyle="bold"
            android:visibility="invisible"
            android:onClick="IamNotAdminLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/admin_panel_LinkId"
            android:text="I'm an admin?"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#E91E63"
            android:onClick="IamAdminLink"
            android:textAlignment="textEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end" />
    </LinearLayout>


</LinearLayout>