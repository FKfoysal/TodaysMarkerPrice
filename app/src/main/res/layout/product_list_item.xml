<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="20sp"
    android:layout_marginEnd="15dp"
    android:layout_marginStart="15dp"
    app:cardElevation="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/sample_product_name_id"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#009688"
            android:text="Product Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ImageView
            android:scaleType="centerCrop"
            android:layout_marginTop="5dp"
            android:id="@+id/sample_product_image_id"
            android:layout_below="@+id/sample_product_name_id"
            android:layout_width="match_parent"
            android:layout_height="200dp" />
        <TextView
            android:layout_below="@+id/sample_product_image_id"
            android:id="@+id/sample_product_price_id"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#009688"
            android:text="Product Price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_below="@+id/sample_product_price_id"
            android:id="@+id/sample_product_description_id"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#009688"
            android:text="Product Description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_below="@+id/sample_product_description_id"
            android:id="@+id/sample_product_location_id"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#009688"
            android:text="Product Location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>